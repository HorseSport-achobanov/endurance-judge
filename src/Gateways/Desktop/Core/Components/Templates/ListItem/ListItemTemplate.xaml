<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:EnduranceJudge.Gateways.Desktop.Core.Components.Templates.ListItem"
                    xmlns:strings="clr-namespace:EnduranceJudge.Localization;assembly=EnduranceJudge.Localization">

    <DataTemplate DataType="{x:Type local:ListItemViewModel}">
        <StackPanel>
            <DockPanel Style="{StaticResource List-Item}">
                <TextBlock Style="{StaticResource Text}"
                           Text="{Binding Name}" />

                <Button Style="{StaticResource Button}" HorizontalAlignment="Right"
                        Content="{x:Static strings:DesktopStrings.UPDATE_BUTTON}"
                        Command="{Binding Command}"
                        CommandParameter="{Binding Id}" />
            </DockPanel>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>
