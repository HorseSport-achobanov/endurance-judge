<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="Background" TargetType="Border">
        <Setter Property="Padding" Value="10px" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <Style x:Key="Background-Navigation" TargetType="Border" BasedOn="{StaticResource Background}">
        <Setter Property="Background" Value="#ffe9c2" />
    </Style>

    <Style x:Key="Background-Error" TargetType="Border" BasedOn="{StaticResource Background}">
        <Setter Property="Background" Value="DarkRed" />
        <Setter Property="MinWidth" Value="300px" />
        <Setter Property="MinHeight" Value="150px" />
    </Style>

</ResourceDictionary>
