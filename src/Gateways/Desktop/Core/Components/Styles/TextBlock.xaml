<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="Text" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14px" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Padding" Value="10px 0 0 0" />
    </Style>

    <Style x:Key="Interval" TargetType="TextBlock">
        <Setter Property="Text" Value="   " />
    </Style>

    <Style x:Key="Text-Centered" TargetType="TextBlock" BasedOn="{StaticResource Text}">
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <Style x:Key="Text-Bold" TargetType="TextBlock" BasedOn="{StaticResource Text}">
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style x:Key="Text-H1" TargetType="TextBlock" BasedOn="{StaticResource Text-Centered}">
        <Setter Property="Foreground" Value="#f7c56e" />
        <Setter Property="FontSize" Value="21px" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Padding" Value="5px" />
    </Style>

    <Style x:Key="Text-H2" TargetType="TextBlock" BasedOn="{StaticResource Text-Centered}">
        <Setter Property="Foreground" Value="#f7c56e" />
        <Setter Property="FontSize" Value="18px" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Padding" Value="5px" />
    </Style>

    <Style x:Key="Text-H3" TargetType="TextBlock" BasedOn="{StaticResource Text-Bold}">
        <Setter Property="FontSize" Value="16px" />
    </Style>

    <Style x:Key="Text-Label" TargetType="TextBlock" BasedOn="{StaticResource Text-H3}">
        <Setter Property="Padding" Value="5px" />
    </Style>

    <Style x:Key="Text-Error" TargetType="TextBlock" BasedOn="{StaticResource Text}">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Margin" Value="10px" />
    </Style>

</ResourceDictionary>
