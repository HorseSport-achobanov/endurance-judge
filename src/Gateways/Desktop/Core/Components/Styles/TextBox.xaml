<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="Input" TargetType="TextBox">
        <Setter Property="FontSize" Value="14px" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <Style x:Key="TextBox-Table" TargetType="TextBox" BasedOn="{StaticResource Input}">
        <Setter Property="Height" Value="19px" />
    </Style>

    <Style x:Key="TextBox-Table-Bold" TargetType="TextBox" BasedOn="{StaticResource TextBox-Table}">
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style x:Key="Input-Id" BasedOn="{StaticResource Input}" TargetType="TextBox">
        <Setter Property="Visibility" Value="Hidden" />
    </Style>

    <Style x:Key="Readonly" TargetType="TextBox" BasedOn="{StaticResource Input}">
        <Setter Property="IsReadOnly" Value="True" />
    </Style>

    <Style x:Key="Input-Time" TargetType="TextBox" BasedOn="{StaticResource Input}">
        <Setter Property="Width" Value="30px" />
    </Style>

</ResourceDictionary>
