<UserControl x:Class="EnduranceJudge.Gateways.Desktop.Views.Dialogs.Message.MessageDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mvvm="http://prismlibrary.com/"
             xmlns:localization="clr-namespace:EnduranceJudge.Localization.Translations;assembly=EnduranceJudge.Localization"
             mvvm:ViewModelLocator.AutoWireViewModel="True">

    <Border Style="{StaticResource Padding-Thick}"
            Background="{Binding Severity, Converter={StaticResource SeverityToColorConverter}}">

        <TextBlock Style="{StaticResource Text-White}"
                   Text="{Binding Message}"/>
    </Border>
</UserControl>
