<UserControl x:Class="EnduranceJudge.Gateways.Desktop.Views.Content.Event.ConfigurationMenu.ConfigurationMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:strings="clr-namespace:EnduranceJudge.Localization;assembly=EnduranceJudge.Localization"
             prism:ViewModelLocator.AutoWireViewModel="True">

    <StackPanel Style="{StaticResource List-Vertical}">
        <Button Style="{StaticResource Button-Header-Vertical}"
                Command="{Binding ChangeToEventsList}"
                Content="{x:Static strings:DesktopStrings.EnduranceEventButtonText}" />

        <Button Style="{StaticResource Button-Header-Vertical}"
                Command="{Binding ChangeToAthletesList}"
                Content="{x:Static strings:DesktopStrings.AthletesButtonText}" />

        <Button Style="{StaticResource Button-Header-Vertical}"
                Command="{Binding ChangeToHorseList}"
                Content="{x:Static strings:DesktopStrings.HorsesButtonText}" />
    </StackPanel>
</UserControl>
