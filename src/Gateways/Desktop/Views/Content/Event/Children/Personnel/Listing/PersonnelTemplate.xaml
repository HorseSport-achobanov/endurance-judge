<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:personnel="clr-namespace:EnduranceJudge.Gateways.Desktop.Views.Content.Event.Children.Personnel">

    <DataTemplate DataType="{x:Type personnel:PersonnelViewModel}">
        <DockPanel Style="{StaticResource Dock-Horizontal}">
            <TextBlock Style="{StaticResource Text}"
                       Text="{Binding RoleName}" />

            <TextBlock Style="{StaticResource Text}"
                       Text="{Binding Name}" />

            <Button Style="{StaticResource Button-Form-Update}" HorizontalAlignment="Right"
                    Command="{Binding NavigateToUpdate}" />
        </DockPanel>
    </DataTemplate>

</ResourceDictionary>
