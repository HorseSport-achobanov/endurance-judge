<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:competitions="clr-namespace:EnduranceJudge.Gateways.Desktop.Views.Content.Event.Children.Competitions"
                    xmlns:localization="clr-namespace:EnduranceJudge.Localization;assembly=EnduranceJudge.Localization">

    <DataTemplate DataType="{x:Type competitions:CompetitionViewModel}">
        <DockPanel Style="{StaticResource Stretch-Last}">
            <Button Style="{StaticResource Button}"
                    Command="{Binding NavigateToUpdate}"
                    Content="{x:Static localization:DesktopStrings.UpdateButtonText}" />

            <StackPanel Style="{StaticResource List-Vertical}">
                <TextBlock Style="{StaticResource Text-Paragraph}"
                           Text="{Binding Name}" />

                <DockPanel Style="{StaticResource Stretch-Last}">
                    <ListBox Style="{StaticResource List}"
                             ItemsSource="{Binding Phases}" />
                </DockPanel>
            </StackPanel>
        </DockPanel>
    </DataTemplate>

</ResourceDictionary>
