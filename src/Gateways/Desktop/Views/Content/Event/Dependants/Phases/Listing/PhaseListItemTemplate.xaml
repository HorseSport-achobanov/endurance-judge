<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:phases="clr-namespace:EnduranceJudge.Gateways.Desktop.Views.Content.Event.Dependants.Phases">

    <DataTemplate DataType="{x:Type phases:PhaseViewModel}">
        <StackPanel Style="{StaticResource List-Vertical}">
            <TextBlock Style="{StaticResource Text-Paragraph}"
                       Text="{Binding Id}" />

            <TextBlock Style="{StaticResource Text-Paragraph}"
                       Text="{Binding LengthInKm}" />

            <TextBlock Style="{StaticResource Text-Paragraph}"
                       Text="{Binding IsFinal}" />
        </StackPanel>
    </DataTemplate>

</ResourceDictionary>
