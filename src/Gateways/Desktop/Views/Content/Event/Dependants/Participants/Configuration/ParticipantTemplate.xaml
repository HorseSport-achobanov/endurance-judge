<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:participants="clr-namespace:EnduranceJudge.Gateways.Desktop.Views.Content.Event.Dependants.Participants"
                    xmlns:localization="clr-namespace:EnduranceJudge.Localization;assembly=EnduranceJudge.Localization">

    <DataTemplate DataType="{x:Type participants:ParticipantViewModel}">
        <DockPanel Style="{StaticResource Stretch-Last}">
            <Button Style="{StaticResource Button}"
                    Command="{Binding NavigateToUpdate}"
                    Content="{x:Static localization:DesktopStrings.UpdateButtonText}" />

            <ContentPresenter Content="{Binding Name}" />
        </DockPanel>
    </DataTemplate>

</ResourceDictionary>
