<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:competitions="clr-namespace:EnduranceJudge.Gateways.Desktop.Views.Content.Event.Dependants.Competitions">

    <DataTemplate DataType="{x:Type competitions:CompetitionViewModel}">
        <StackPanel Style="{StaticResource List-Vertical}">
            <TextBlock Style="{StaticResource Text-Paragraph}"
                       Text="{Binding Name}" />

            <DockPanel Style="{StaticResource Stretch-Last}">
                <TextBlock Style="{StaticResource Text-Paragraph}">Phases:  </TextBlock>

                <TextBlock Style="{StaticResource Text-Paragraph}"
                           Text="{Binding PhaseCount}" />

                <ListBox Style="{StaticResource List}"
                         ItemsSource="{Binding Phases}" />
            </DockPanel>
        </StackPanel>
    </DataTemplate>

</ResourceDictionary>
