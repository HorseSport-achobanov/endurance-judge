<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:participations="clr-namespace:EnduranceJudge.Domain.Aggregates.Rankings.Participations;assembly=EnduranceJudge.Domain">

    <DataTemplate DataType="{x:Type participations:Participation}">
        <Border Style="{StaticResource Border-Vertical}">
            <TextBlock Style="{StaticResource Text}">
                <Run Style="{StaticResource Run}" Text="{Binding Number, Mode=OneWay}" />
                <Run Style="{StaticResource Run}" Text=" - " />
                <Run Style="{StaticResource Run}" Text="{Binding AthleteFirstName, Mode=OneWay}" />
                <Run Style="{StaticResource Run}" Text=" " />
                <Run Style="{StaticResource Run}" Text="{Binding AthleteLastName, Mode=OneWay}" />
                <Run Style="{StaticResource Run}" Text=" " />
                <Run Style="{StaticResource Run}" Text="{Binding HorseName, Mode=OneWay}" />
            </TextBlock>
        </Border>
    </DataTemplate>

</ResourceDictionary>
