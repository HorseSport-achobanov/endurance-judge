<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:competitions="clr-namespace:EnduranceJudge.Gateways.Desktop.Views.Content.Configuration.Children.Competitions"
                    xmlns:localization="clr-namespace:EnduranceJudge.Localization.Translations;assembly=EnduranceJudge.Localization">

    <DataTemplate DataType="{x:Type competitions:CompetitionViewModel}">
        <StackPanel Style="{StaticResource List-Vertical}">

            <Border Style="{StaticResource Border-Vertical}">
                <DockPanel Style="{StaticResource Dock-Horizontal}">
                    <TextBlock Style="{StaticResource Text-Bold}"
                               Text="{Binding Name}"/>

                    <TextBlock Style="{StaticResource Text-Bold}"
                               Text="{Binding TypeString}" />

                    <Button Style="{StaticResource Button-Form}"
                            Command="{Binding ToggleVisibility}"
                            Content="{Binding ToggleText}" />

                    <Button Style="{StaticResource Button-Form}" HorizontalAlignment="Right"
                            Command="{Binding NavigateToUpdate}"
                            Content="{x:Static localization:Words.UPDATE_COMPETITION}" />
                </DockPanel>
            </Border>

            <StackPanel Visibility="{Binding Visibility}">

                <Border Style="{StaticResource Border-Vertical}">
                    <TextBlock Style="{StaticResource Text}"
                               Text="{x:Static localization:Entities.PHASES}" />
                </Border>

                <Border Style="{StaticResource Border-Vertical}">
                    <ListBox Style="{StaticResource ListBox-Vertical}"
                             ItemsSource="{Binding Phases}" />
                </Border>

            </StackPanel>
        </StackPanel>
    </DataTemplate>

</ResourceDictionary>
