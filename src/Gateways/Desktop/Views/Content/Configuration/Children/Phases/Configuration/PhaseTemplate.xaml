<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:phases="clr-namespace:EnduranceJudge.Gateways.Desktop.Views.Content.Configuration.Children.Phases"
                    xmlns:localization="clr-namespace:EnduranceJudge.Localization;assembly=EnduranceJudge.Localization">

    <DataTemplate DataType="{x:Type phases:PhaseViewModel}">
        <Border Style="{StaticResource Border-Vertical}">
            <DockPanel Style="{StaticResource Stretch-Last}">
                <TextBlock Style="{StaticResource Text}">
                    <Run Text="{x:Static localization:Strings.LENGTH_IN_KM_TEXT}" />
                    <Run Text=":" />
                    <Run Style="{StaticResource Run-Bold}" Text="{Binding LengthInKmDisplay}" />
                </TextBlock>

                <TextBlock Style="{StaticResource Text-Bold}"
                           Text="{Binding IsFinalText, Mode=OneWay}" />

                <Button Style="{StaticResource Button-Form-Update}" HorizontalAlignment="Right"
                        Command="{Binding NavigateToUpdate}"
                        Content="{x:Static localization:Strings.UPDATE_PHASE_TEXT}" />
            </DockPanel>
        </Border>
    </DataTemplate>
</ResourceDictionary>
