<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:participants="clr-namespace:EnduranceJudge.Gateways.Desktop.Views.Content.Configuration.Roots.Participants"
                    xmlns:localization="clr-namespace:EnduranceJudge.Localization.Translations;assembly=EnduranceJudge.Localization">

    <DataTemplate DataType="{x:Type participants:ParticipantViewModel}">
        <DockPanel Style="{StaticResource Dock-Horizontal}">

            <TextBlock Style="{StaticResource Text}"
                       Text="{Binding Name}" />

            <Button Style="{StaticResource Button}" HorizontalAlignment="Right"
                    Command="{Binding NavigateToUpdate}"
                    Content="{x:Static localization:Words.UPDATE}" />
        </DockPanel>
    </DataTemplate>

</ResourceDictionary>
