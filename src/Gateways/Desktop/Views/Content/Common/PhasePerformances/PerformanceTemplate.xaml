<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:EnduranceJudge.Gateways.Desktop.Views.Content.Common.PhasePerformances"
                    xmlns:localization="clr-namespace:EnduranceJudge.Localization.Translations;assembly=EnduranceJudge.Localization">

    <DataTemplate DataType="{x:Type local:PerformanceTemplateModel}">
        <StackPanel Style="{StaticResource List-Vertical}" Margin="0 -3px 0 0" Width="100px">
            <!-- Header -->
            <Border Style="{StaticResource Border-Table-Cell}">
                <TextBlock Style="{StaticResource Text}"
                           Text="{Binding HeaderValue, Mode=OneWay, StringFormat=HH:mm}" />
            </Border>
            <!-- EDITABLE TIMES -->
            <!-- Arrival Time -->
            <Border Style="{StaticResource Border-Table-Cell}" Visibility="{Binding EditVisibility}">
                <TextBox Style="{StaticResource Input}"
                         Text="{Binding ArrivalTimeString}" BorderThickness="0" />
            </Border>
            <!-- Inspection Time -->
            <Border Style="{StaticResource Border-Table-Cell}" Visibility="{Binding EditVisibility}">
                <TextBox Style="{StaticResource Input}"
                         Text="{Binding InspectionTimeString}" BorderThickness="0" />
            </Border>
            <!-- ReInspection Time -->
            <Border Style="{StaticResource Border-Table-Cell}" Visibility="{Binding EditVisibility}">
                <TextBox Style="{StaticResource Input}"
                         Text="{Binding ReInspectionTimeString}" BorderThickness="0" />
            </Border>
            <!-- Required Inspection Time -->
            <Border Style="{StaticResource Border-Table-Cell}" Visibility="{Binding EditVisibility}">
                <TextBox Style="{StaticResource Input}"
                         Text="{Binding RequiredInspectionTimeString}" />
            </Border>
            <!-- READONLY TIMES -->
            <!-- Arrival Time-->
            <Border Style="{StaticResource Border-Table-Cell}" Visibility="{Binding ReadonlyVisibility}">
                <TextBlock Style="{StaticResource Text}"
                           Text="{Binding ArrivalTimeString}" />
            </Border>
            <!-- Inspection Time -->
            <Border Style="{StaticResource Border-Table-Cell}" Visibility="{Binding ReadonlyVisibility}">
                <TextBlock Style="{StaticResource Text}"
                           Text="{Binding InspectionTimeString}" />
            </Border>
            <!-- Re-inspection Time -->
            <Border Style="{StaticResource Border-Table-Cell}" Visibility="{Binding ReadonlyVisibility}">
                <TextBlock Style="{StaticResource Text}"
                           Text="{Binding ReInspectionTimeString}" />
            </Border>
            <!-- Required Inspection Time -->
            <Border Style="{StaticResource Border-Table-Cell}" Visibility="{Binding ReadonlyVisibility}">
                <TextBlock Style="{StaticResource Text}"
                           Text="{Binding RequiredInspectionTimeString}" />
            </Border>
            <!-- Loop Span -->
            <Border Style="{StaticResource Border-Table-Cell}">
                <TextBlock Style="{StaticResource Text}">
                    <Run Text="{Binding LoopSpan, Mode=OneWay, StringFormat=hh\\:mm}" />
                    <Run Text="{x:Static localization:Words.HOURS_SYMBOL}" />
                </TextBlock>
            </Border>
            <!-- Phase Span -->
            <Border Style="{StaticResource Border-Table-Cell}">
                <TextBlock Style="{StaticResource Text}">
                    <Run Text="{Binding PhaseSpan, Mode=OneWay, StringFormat=hh\\:mm}" />
                    <Run Text="{x:Static localization:Words.HOURS_SYMBOL}" />
                </TextBlock>
            </Border>
            <!-- Average Speed for Loop -->
            <Border Style="{StaticResource Border-Table-Cell}">
                <TextBlock Style="{StaticResource Text}">
                    <Run Text="{Binding AverageSpeedForLoopInKpH, Mode=OneWay, StringFormat=N2}" />
                    <Run Text="{x:Static localization:Words.KM_PER_HOUR}" />
                </TextBlock>
            </Border>
            <!-- Average Speed for Phase -->
            <Border Style="{StaticResource Border-Table-Cell}">
                <TextBlock Style="{StaticResource Text}">
                    <Run Text="{Binding AverageSpeedForPhaseInKpH, Mode=OneWay, StringFormat=N2}" />
                    <Run Text="{x:Static localization:Words.KM_PER_HOUR}" />
                </TextBlock>
            </Border>
            <!-- Next Performance Start Time -->
            <Border Style="{StaticResource Border-Table-Cell}">
                <TextBlock Style="{StaticResource Text}"
                           Text="{Binding NextPerformanceStartTime, Mode=OneWay, StringFormat=HH:mm}" />
            </Border>
            <!-- Edit button -->
            <Border Style="{StaticResource Border-Table-Cell}" Visibility="{Binding EditVisibility}">
                <Button Style="{StaticResource Button-Table}" Width="90px"
                        Command="{Binding Edit}"
                        Content="{x:Static localization:Words.EDIT}" />
            </Border>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>
