<UserControl x:Class="EnduranceJudge.Gateways.Desktop.Views.Error.ErrorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mvvm="http://prismlibrary.com/"
             xmlns:strings="clr-namespace:EnduranceJudge.Localization;assembly=EnduranceJudge.Localization"
             mvvm:ViewModelLocator.AutoWireViewModel="True">

    <Border Style="{StaticResource Wrapper-Error}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="60px" />
            </Grid.RowDefinitions>

            <ScrollViewer Style="{StaticResource Scroll-Wrapper}" HorizontalAlignment="Center"
                          Grid.Row="0">
                <TextBlock Style="{StaticResource Text-Error}"
                           Text="{Binding Message}"/>
            </ScrollViewer>

            <Button Style="{StaticResource Button-Back}" Width="200px" HorizontalAlignment="Center" Margin="5px"
                    Command="{Binding NavigateBack}"
                    Grid.Row="1" />
        </Grid>
    </Border>
</UserControl>
