<UserControl x:Class="EnduranceJudge.Gateways.Desktop.Views.Error.MessageDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mvvm="http://prismlibrary.com/"
             xmlns:strings="clr-namespace:EnduranceJudge.Localization;assembly=EnduranceJudge.Localization"
             mvvm:ViewModelLocator.AutoWireViewModel="True">

    <Border Style="{StaticResource Padding-Thick}"
            Background="{Binding Severity, Converter={StaticResource SeverityToColorConverter}}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="60px" />
            </Grid.RowDefinitions>

            <TextBlock Style="{StaticResource Text-White}"
                       Text="{Binding Message}"/>

            <Button Style="{StaticResource Button-Back}" Width="200px" HorizontalAlignment="Center" Margin="5px"
                    Grid.Row="1" />
        </Grid>
    </Border>
</UserControl>
